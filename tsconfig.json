{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "dom",
      "es6",
      "es2015",
      "es2016",
      "es2017",
      "scripthost"
    ],
    "outDir": "./dist",
//    "outFile": "./mini-toastr",
    "declaration": true,
    "declarationDir": "declarations",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    // "noUnusedParameters": true,
    // "noUnusedLocals": true,
    // "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "declarations",
    "dist",
    "**/*.spec.ts"
  ]
}