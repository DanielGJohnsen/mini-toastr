{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2015",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ],
    //    "module": "commonjs",
    //    "module": "system",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "dom",
      "es6",
      "es2015",
      "es2016",
      "es2017"
    ],
//    "outFile": "./mini-toastr.js",
    "declaration": true,
    //    "declarationDir": "declarations",
//    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    // "noUnusedParameters": true,
    // "noUnusedLocals": true,
    // "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "declarations",
    "dist",
    "**/*.spec.ts"
  ]
}